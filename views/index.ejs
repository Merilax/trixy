<body>
    <header id="top">
        <button id="btn-theme" onclick="swapTheme();"><img src="/media/bulblight.svg" alt="Toggle theme" width="30"
                height="30" /></button>
    </header>

    <nav class="container-md">
        <div class="row nav-row">
            <div class="col-1" id="navlogo">
                <a href="#top">
                    <img src="/media/trixy.png" alt="Trixy" title="Back to main page" width="50" height="50" />
                </a>
            </div>

            <div class="col-8" id="navlink">
                <span><a href="https://discord.com/oauth2/authorize?client_id=583006737322475550&permissions=8&redirect_uri=https%3A%2F%2Fwww.google.com&response_type=code&scope=bot%20identify%20email%20guilds"
